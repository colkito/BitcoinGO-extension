{
  "manifest_version": 2,
  "name": "Bitcoin GO",
  "version": "0.0.2",
  "description": "Get live notifications for bitcoin value",
  "icons": {
    "16": "bitcoin-16.png",
    "48": "bitcoin-48.png",
    "128": "bitcoin-128.png"
  },
  "permissions": ["https://www.bitstamp.net/api/ticker/", "notifications"],
  "web_accessible_resources": ["bitcoin-128.png"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "bitcoin-16.png"
  }
}
